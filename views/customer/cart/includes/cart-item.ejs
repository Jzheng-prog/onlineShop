<article class = 'cart-item'>

    <div class = cart-item-info>
        <h2><%= item.product.title%></h2>
        <p class ='cart-item-price'>
            $<span class ='cart-product-price'><%= item.totalPrice.toFixed(2)%></span>
            (<span class ='cart-product-price2'><%=(item.product.price.toFixed(2))%></span>
            x <span class ='cart-product-price3'><%=item.quantity%> </span>)

        </p>
    </div>

    <form class = 'cart-item-management' data-itemQuantity = '<%=item.quantity%>' data-productid ='<%=item.product.id%>' data-csrf="<%=locals.csrfToken%>">
        <input type="number" value ='<%=item.quantity%>' required>
        <button type = 'submit' class='btn btn-alt'>Update</button>
    </form>

</article>